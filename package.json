{
  "name": "guruorm",
  "version": "1.17.6",
  "description": "A powerful, elegant Node.js ORM inspired by Laravel and Illuminate",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "bin",
    "stubs",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "bin": {
    "guruorm": "bin/guruorm.mjs"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "orm",
    "database",
    "sql",
    "mysql",
    "postgresql",
    "sqlite",
    "sqlserver",
    "query-builder",
    "eloquent",
    "migrations",
    "seeder",
    "active-record",
    "typescript",
    "javascript",
    "es6",
    "node-orm",
    "database-migrations",
    "eloquent-orm"
  ],
  "author": "GuruORM Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rishicool/guruorm.git"
  },
  "bugs": {
    "url": "https://github.com/rishicool/guruorm/issues"
  },
  "homepage": "https://github.com/rishicool/guruorm#readme",
  "dependencies": {
    "mysql2": "^3.6.5",
    "pg": "^8.11.3",
    "tedious": "^16.6.1",
    "@faker-js/faker": "^8.3.1",
    "dayjs": "^1.11.10",
    "commander": "^11.1.0",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "dotenv": "^16.3.1"
  },
  "optionalDependencies": {
    "better-sqlite3": "^9.2.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/jest": "^29.5.11",
    "@types/better-sqlite3": "^7.6.8",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
